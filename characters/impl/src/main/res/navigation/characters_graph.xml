<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characters_graph"
    app:startDestination="@id/characterDetailsFragment">

    <action
        android:id="@+id/open_character_details_fragment"
        app:destination="@id/characterDetailsFragment">
        <argument
            android:name="characterId"
            app:argType="integer" />
    </action>

    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.joaogoes.marvelwiki.characters.presentation.details.CharacterDetailsFragment"
        android:label="CharacterDetailsFragment"
        tools:layout="@layout/character_details_fragment">
        <argument
            android:name="characterId"
            app:argType="integer" />
    </fragment>
</navigation>